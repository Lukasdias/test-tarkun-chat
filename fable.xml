<fable>
  <property name="inventario" default="['espada', 'escudo', 'poção']" />
  <property name="danos" default="[10, 15, 25]" />
  <property name="item_ativo" default="0" />

  <page id="jogo">
    <!-- Mostra item atual -->
    <agent id="item" x="100" y="100" text="Item: $inventario[$item_ativo]" />

    <!-- Mostra dano -->
    <agent id="dano" x="100" y="140" text="Dano: $danos[$item_ativo]" />

    <!-- Navegação -->
    <agent
      id="proximo"
      x="100"
      y="200"
      text="Próximo: $inventario[$item_ativo + 1]"
    />

    <!-- Condicionais -->
    <fab-if when="$inventario[$item_ativo] = 'espada'">
      <agent id="especial" x="100" y="240" text="⚔️ Arma lendária!" />
    </fab-if>
  </page>
</fable>
