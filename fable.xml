<fable>
  <page id="helloWorld" bg_color="#2c3e50">
    <agent
      id="helloText"
      x="center"
      y="center"
      text="Hello World"
      color="#ecf0f1"
      font-size="24"
    />
    <agent id="heroi" x="400" y="300" image="forest-hero-idle.png" />

    <!-- HUD no canto (centro em 100,50) -->
    <agent id="vida" x="100" y="50" text="❤️ $vidas" />

    <!-- Inventário centralizado -->
    <fab-for each="item in $itens" index="i">
      <agent id="item-$i" x="400 + ($i - 2) * 80" y="500" image="$item" />
    </fab-for>
  </page>
</fable>
